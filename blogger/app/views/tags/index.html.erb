<h1>All Tags</h1>

<ul>
	<% @tags.each do |tag| %>
		<li>
			<%= tag.name %>
			<% if logged_in? %>
			<%= link_to "delete", tag_path(tag), method: :delete, data:{confirm: "Really delete the tag?"} %><br>
			<% end %>
			<% tag.articles.each do |article| %>
				<li><%= link_to article.title, article_path(article) %></li>
			<% end %>
			<br>
		</li>
	<% end %>
</ul>